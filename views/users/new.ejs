<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New user</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/users" method="POST">
                <div class="form-group">
                    <input class="form-control" name="user[username]" type="text" placeholder="Username">

                </div>
                <div class="form-group">
                    <input class="form-control" name="user[password]" type="text" placeholder="Password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/users">Go Back</a>
        </div>
    </div>
</div>


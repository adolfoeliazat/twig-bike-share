<% include ../../partials/header %>
<% include ../../partials/nav %>

<div class="container">

	<h2 class="row justify-content-center mt-2">Edit Bike #: <%= bike.bikeId %></h2>

	<div class="row justify-content-center">
		<form action="<%= routes.bikes %>/<%= bike.id%>" method="POST">
			<div class="form-group">
				<input class="form-control" name="bike[bikeId]" type="text" value="<%= bike.bikeId %>">
			</div>
			<div class="form-group">
				<input class="form-control" name="bike[code]" type="text" value="<%= bike.code %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				<input type="hidden" name="_method" value="PUT">
			</div>
		</form>
	</div>

	<a class="row justify-content-center mt-5" href="<%= routes.bikes %>">Go Back</a>

	<form class="make-inline row justify-content-center mt-5" action="<%= routes.bikes %>/<%= bike.id %>" method="POST">
		<button class="btn btn-xs btn-danger">Delete</button>
		<input type="hidden" name="_method" value="DELETE">
	</form>

</div>

<% include ../../partials/scripts %>
<% include ../../partials/footer %>

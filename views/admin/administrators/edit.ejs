<% include ../../partials/header %>
<% include ../../partials/nav %>

<div class="container">
	<h1>Edit administrator: <% administrator.name %></h1>
	<div>
		<form action="<%= routes.administrators %>/<%= administrator.id%>" method="POST">
			<div class="form-group">
				<input class="form-control" name="administrator[name]" type="text" value="<%= administrator.name %>">
			</div>
			<div class="form-group">
				<input class="form-control" name="administrator[username]" type="text" value="<%= administrator.username %>">
			</div>
			<a class="btn btn-lg btn-warning btn-block" href="<%= routes.administrators + administrator.id + '/password' %>">Change Password</a>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				<input type="hidden" name="_method" value="PUT">
			</div>
		</form>
		<a href="<%= routes.administrators %>">Go Back</a>
	</div>
</div>

<% include ../../partials/scripts %>
<% include ../../partials/footer %>

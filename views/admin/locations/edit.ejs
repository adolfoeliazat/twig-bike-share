<% include ../../partials/header %>
<% include ../../partials/nav %>

<ol class="breadcrumb">
	<li class="breadcrumb-item"><a href="<%= routes.admin %>">Admin Panel</a></li>
	<li class="breadcrumb-item"><a href="<%= routes.locations %>">Manage Locations</a></li>
	<li class="breadcrumb-item active">Edit Location</li>
</ol>

<div class="container">

	<h2 class="row justify-content-center mt-2">Edit Location: <%= location.name %></h2>

	<div class="row justify-content-center">
		<form
			class="col-md-6"
			action="<%= routes.locations %>/<%= location.id%>"
			method="POST">
			<div class="form-group row">
				<label for="location-name">Location Name</label>
				<input class="form-control" id="location-name" name="location[name]" type="text" value="<%= location.name %>">
			</div>
			<div class="form-group row">
				<label for="location-code">Location Code</label>
				<input class="form-control" id="location-code" name="location[code]" type="text" value="<%= location.code %>">
			</div>
			<div class="form-group row my-2 justify-content-center">
				<button class="col-md-4 btn btn-lg btn-primary btn-block">Submit</button>
				<input type="hidden" name="_method" value="PUT">
			</div>
		</form>
	</div>

	<form
		class="row justify-content-center"
		action="<%= routes.locations %>/<%= location.id %>"
		method="POST"
		onsubmit="return confirm('Do you really want to delete location: <%= location.name %>?');">

		<button class="btn btn-lg btn-danger">Delete Location</button>
		<input type="hidden" name="_method" value="DELETE">
	</form>

	<div class="row justify-content-center my-2">
		<a class="btn btn-lg btn-success" href="<%= routes.locations %>">Go Back</a>
	</div>

</div>

<% include ../../partials/scripts %>
<% include ../../partials/footer %>

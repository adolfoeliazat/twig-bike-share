<% include ../../../partials/header %>
<% include ../../../partials/nav %>

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="<%= routes.admin %>">Admin Panel</a></li>
    <li class="breadcrumb-item"><a href="<%= routes.subscriberGroups %>">Manage Subscriber Groups</a></li>
    <li class="breadcrumb-item active">Subscribers</li>
</ol>

<div class="container">
    <div class="row">
        <table class="table table-hover subscriber-list">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Active</th>
                <th>Edit</th>
            </tr>
            <% subscribers.forEach(function(subscriber){ %>
                <tr>
                    <td><%= subscriber.firstName + " " + subscriber.lastName %></td>
                    <td><%= subscriber.email %></td>
                    <td><%= subscriber.phoneNumber ? subscriber.phoneNumber : "User has not been validated" %></td>
                    <td><%= subscriber.active %></td>
                    <td><a href="<%= routes.subscriberGroups + '/' + groupId + '/subscribers/' + subscriber.id %>/edit" class="btn btn-xs btn-warning">Edit</a></td>
                </tr>
            <% }); %>
        </table>
    </div>
</div>

<% include ../../../partials/scripts %>
<% include ../../../partials/footer %>

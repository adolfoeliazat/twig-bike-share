<% include ../../partials/header %>
<% include ../../partials/nav %>

<div class="container">
	<div class="row">
		<h1>Create a New Subscriber Group</h1>
		<div>
			<form action="<%= routes.subscriberGroups %>" method="POST">
				<div class="form-group">
					<label for="groupName">Group Name</label>
					<input class="form-control" name="subscriberGroup[groupName]" id="groupName" type="text" placeholder="Open Bike Group">
				</div>
				<div class="form-group">
					<label for="emailDomain">Email Domain</label>
					<input class="form-control" name="subscriberGroup[emailDomain]" id="emailDomain" type="text" placeholder="@openbikeinitiative.com">
				</div>
				<div class="form-group">
					<label for="signUpSlug">Sign Up Slug</label>
					<input class="form-control" name="subscriberGroup[signUpSlug]" id="signUpSlug" type="text" placeholder="open-bike-group">
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="<%= routes.subscriberGroups %>">Go Back</a>
		</div>
	</div>
</div>

<% include ../../partials/scripts %>
<% include ../../partials/footer %>

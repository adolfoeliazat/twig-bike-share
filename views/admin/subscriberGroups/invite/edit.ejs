<% include ../../../partials/header %>
<% include ../../../partials/nav %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add Invite Text Here</h1>
        <div style="width: 100%; margin: 30px auto;">
            <form action="/invite/edit" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="inviteHtml" rows="20"><%= invite.value %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    <input type="hidden" name="_method" value="PUT">
                </div>
            </form>
            <a href="/subscribers">Go Back</a>
        </div>
        <div class="row">
            <div class="well">
                <%- invite.value %>
            </div>
        </div>
    </div>
</div>

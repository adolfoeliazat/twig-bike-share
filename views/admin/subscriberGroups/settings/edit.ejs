<% include ../../../partials/header %>
<% include ../../../partials/nav %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Setting</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="<%= routes.settings %>/<%= setting.id%>" method="POST">
                <div class="form-group">
                    <label for="settingName">Name</label>
                    <input class="form-control" name="setting[key]" id="settingName" type="text" value="<%= setting.key %>" readonly>
                </div>
                <div class="form-group">
                    <label for="settingValue">Value</label>
                    <input class="form-control" name="setting[value]" id="settingValue" type="text" value="<%= setting.value %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    <input type="hidden" name="_method" value="PUT">
                </div>
            </form>
            <a href="<%= routes.settings %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../../../partials/scripts %>
<% include ../../../partials/footer %>

<% include ../partials/header %>
<% include ../partials/nav %>

<div class="container content">
	<div class="row justify-content-center mb-3 mb-md-5">
		<h1 class="col-10 text-center">Thank you <%= subscriber.firstName %></h1>
	</div>
	<div class="row justify-content-center">
		<h2 class="col-10 text-center">A confirmation email has been sent to:</h2>
	</div>
	<div class="row justify-content-center mb-3 mb-md-5">
		<h3 class="col-10 text-center"><em><%= subscriber.email %></em></h3>
	</div>
	<div class="row justify-content-center mb-3 mb-md-5">
		<h1 class="col-10 text-center">Please check your email.</h1>
	</div>
	<div class="row justify-content-center">
		<p class="col-10 text-center">If you do not receive an email please contact:</p>
	</div>
	<div class="row justify-content-center mb-3 mb-md-5">
		<a class="col-10 text-center" href="mailto:<%= supportEmail %>"><%= supportEmail %></a>
	</div>
</div>


<% include ../partials/scripts %>
<% include ../partials/footer %>

<% include ../partials/header %>
<% include ../partials/nav %>

<div class="container">
    <div class="row">
        <a class="btn btn-primary btn-large" href="<%= routes.admins %>/new">Add a new Administrator</a>
    </div>

    <div class="row">
        <table class="table table-hover bike-list">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            <% admins.forEach(function(admin){ %>
            <tr>
                <td><%= admin.name %></td>
                <td><%= admin.username %></td>
                <td>
                    <a href="<%= routes.admins %>/<%= admin._id %>/edit" class="btn btn-xs btn-warning">Edit</a>
                </td>
                <td>
                    <form action="<%= routes.admins %>/<%= admin._id %>" method="POST" class="make-inline">
                        <button class="btn btn-xs btn-danger">Delete</button>
                        <input type="hidden" name="_method" value="DELETE">
                    </form>
                </td>
            </tr>
            <% }); %>
        </table>
    </div>
</div>

<% include ../partials/footer %>

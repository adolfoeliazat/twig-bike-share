<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Subscriber: <%= subscriber.firstName + " " + subscriber.lastName %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/subscribers" method="POST">
                <div class="form-group">
                    <input class="form-control" name="subscriber[firstName]" type="text" value="<%= subscriber.firstName %>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="subscriber[lastName]" type="text" value="<%= subscriber.lastName %>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="subscriber[email]" type="text" value="<%= subscriber.email %>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="subscriber[phoneNumber]" type="text" value="<%= subscriber.phoneNumber %>">
                </div>
                <div class="form-group">
                    <input class="form-control" name="subscriber[active]" type="checkbox" value="Active" <%= subscriber.active? "checked": "" %> >
                </div>
                <div class="form-group">
                    <input class="form-control" name="subscriber[validationCode]" type="text" value="<%= subscriber.validationCode %>" readonly>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/subscribers">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
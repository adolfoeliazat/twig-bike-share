<% include ../partials/header %>
<% include ../partials/nav %>

<div class="container">
    <div class="row">
        <a class="btn btn-primary btn-large" href="<%= routes.subscribers %>/new">Add new subscriber</a>
    </div>
    <div class="row">
        <a class="btn btn-primary btn-large" href="<%= routes.subscribers %>/bulk">Add bulk subscribers</a>
    </div>

    <div class="row">
        <table class="table table-hover subscriber-list">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Active</th>
                <th>Invites</th>
                <th>Edit</th>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td><a href="/subscribers/invite" class="btn btn-xs btn-primary">Invite All Uninvited</a></td>
                <td></td>
            </tr>
            <% subscribers.forEach(function(subscriber){ %>
                <tr>
                    <td><%= subscriber.firstName + " " + subscriber.lastName %></td>
                    <td><%= subscriber.email %></td>
                    <td><%= subscriber.phoneNumber %></td>
                    <td><%= subscriber.active %></td>
                    <td>
                        <% if ( !subscriber.invited) { %>
                            <a href="<%= routes.subscribers %>/<%= subscriber.id %>/invite" class="btn btn-xs btn-primary">Send Invite</a>
                        <% } else { %>
                            <a href="#" class="btn btn-default btn-xs disabled" role="button">Invited</a>
                        <% }%>
                    </td>
                    <td><a href="<%= routes.subscribers %>/<%= subscriber.id %>/edit" class="btn btn-xs btn-warning">Edit</a></td>
                </tr>
            <% }); %>
        </table>
    </div>
    <div class="row">
        <a class="btn btn-primary btn-large" href="<%= routes.invite %>/edit">Edit Invite HTML</a>
    </div>
</div>

<% include ../partials/footer %>

<% include ../partials/header %>

<div class="container">
    <div class="row">
        <a class="btn btn-primary btn-large" href="/subscribers/invite/new">Invite a new subscriber</a>
    </div>

    <div class="row">
        <table class="table table-hover subscriber-list">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Active</th>
                <th>Invites</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            <% subscribers.forEach(function(user){ %>
                <tr>
                    <td><%= user.firstName + " " + user.lastName %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phoneNumber %></td>
                    <td><%= user.active %></td>
                    <td>
                        <% if ( !user.invited) { %>
                            <a href="/subscribers/invite/<%= user.id %>" class="btn btn-xs btn-primary">Send Invite</a>
                        <% } else { %>
                            <a href="#" class="btn btn-default btn-xs disabled" role="button">Invited</a>
                        <% }%>
                    </td>
                    <td><a href="/subscribers/<%= user.id %>/edit" class="btn btn-xs btn-warning">Edit</a></td>
                    <td>
                        <form action="/subscribers/<%= user._id %>" method="POST" class="make-inline">
                            <button class="btn btn-xs btn-danger">Delete</button>
                            <input type="hidden" name="_method" value="DELETE">
                        </form>
                    </td>
                </tr>
            <% }); %>
        </table>
    </div>
</div>

<% include ../partials/footer %>

<% include ../partials/header %>

<div class="container">
    <div class="row">
        <a class="btn btn-primary btn-large" href="/subscribers/new">Add new subscriber</a>
    </div>
    <div class="row">
        <a class="btn btn-primary btn-large" href="/subscribers/bulk">Add bulk subscribers</a>
    </div>

    <div class="row">
        <table class="table table-hover subscriber-list">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Active</th>
                <th>Invites</th>
                <th>Edit</th>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td><a href="/subscribers/invite" class="btn btn-xs btn-primary">Invite All Uninvited</a></td>
                <td></td>
            </tr>
            <% subscribers.forEach(function(user){ %>
                <tr>
                    <td><%= user.firstName + " " + user.lastName %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phoneNumber %></td>
                    <td><%= user.active %></td>
                    <td>
                        <% if ( !user.invited) { %>
                            <a href="/subscribers/<%= user.id %>/invite" class="btn btn-xs btn-primary">Send Invite</a>
                        <% } else { %>
                            <a href="#" class="btn btn-default btn-xs disabled" role="button">Invited</a>
                        <% }%>
                    </td>
                    <td><a href="/subscribers/<%= user.id %>/edit" class="btn btn-xs btn-warning">Edit</a></td>
                </tr>
            <% }); %>
        </table>
    </div>
    <div class="row">
        <a class="btn btn-primary btn-large" href="/invite/edit">Edit Invite HTML</a>
    </div>
</div>

<% include ../partials/footer %>

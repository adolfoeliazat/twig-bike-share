<% include ../partials/header %>


<div class="container">
  <div class="row">
    <a class="btn btn-primary btn-large" href="/bikes/new">Add a new Bike</a>
  </div>


  <div class="row">
    <table class="table table-hover bike-list">
      <tr>
        <th>Bike ID #</th>
        <th>Bike Lock Code</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
      <% bikes.forEach(function(bike){ %>
        <tr>
          <td><%= bike.id %></td>
          <td><%= bike.code %></td>
          <td>
              <a href="/bikes/:id/edit" class="btn btn-xs btn-warning">Edit</a>
          </td>
          <td>
            <form action="/bikes/<%= bike._id %>" method="POST" class="make-inline">
              <button class="btn btn-xs btn-danger">Delete</button>
              <input type="hidden" name="_method" value="DELETE">
            </form>
          </td>
        </tr>
      <% }); %>
    </table>
  </div>
</div>

<% include ../partials/footer %>
